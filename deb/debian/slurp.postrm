#!/bin/sh

set -e

case "$1" in
    purge)
        # remove directories
        rm -rf /var/log/slurp
        rm -rf /var/lib/slurp

        # remove user
        if ! getent passwd slurp > /dev/null; then
            deluser slurp || true
        fi
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;
    
    *)
    ;;
esac

